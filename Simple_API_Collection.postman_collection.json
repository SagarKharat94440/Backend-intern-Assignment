{
    "info": {
        "name": "Task API - Simple",
        "description": "Simple API collection for Task Management",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Register",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@test.com\",\n  \"password\": \"Test123\",\n  \"role\": \"user\"\n}"
                },
                "url": {
                    "raw": "http://localhost:5000/api/v2/auth/register",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "5000",
                    "path": [
                        "api",
                        "v2",
                        "auth",
                        "register"
                    ]
                }
            }
        },
        {
            "name": "2. Login",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"john@test.com\",\n  \"password\": \"Test123\"\n}"
                },
                "url": {
                    "raw": "http://localhost:5000/api/v2/auth/login",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "5000",
                    "path": [
                        "api",
                        "v2",
                        "auth",
                        "login"
                    ]
                }
            }
        },
        {
            "name": "3. Get Profile",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer YOUR_TOKEN_HERE"
                    }
                ],
                "url": {
                    "raw": "http://localhost:5000/api/v2/auth/profile",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "5000",
                    "path": [
                        "api",
                        "v2",
                        "auth",
                        "profile"
                    ]
                }
            }
        },
        {
            "name": "4. Create Task",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer YOUR_TOKEN_HERE"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"title\": \"Test Task\",\n  \"description\": \"This is a test task for testing\",\n  \"priority\": \"high\"\n}"
                },
                "url": {
                    "raw": "http://localhost:5000/api/v2/tasks",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "5000",
                    "path": [
                        "api",
                        "v2",
                        "tasks"
                    ]
                }
            }
        },
        {
            "name": "5. Get All Tasks",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer YOUR_TOKEN_HERE"
                    }
                ],
                "url": {
                    "raw": "http://localhost:5000/api/v2/tasks",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "5000",
                    "path": [
                        "api",
                        "v2",
                        "tasks"
                    ]
                }
            }
        },
        {
            "name": "6. Update Task",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer YOUR_TOKEN_HERE"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"title\": \"Updated Task\",\n  \"status\": \"completed\"\n}"
                },
                "url": {
                    "raw": "http://localhost:5000/api/v2/tasks/TASK_ID_HERE",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "5000",
                    "path": [
                        "api",
                        "v2",
                        "tasks",
                        "TASK_ID_HERE"
                    ]
                }
            }
        },
        {
            "name": "7. Delete Task",
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer YOUR_TOKEN_HERE"
                    }
                ],
                "url": {
                    "raw": "http://localhost:5000/api/v2/tasks/TASK_ID_HERE",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "5000",
                    "path": [
                        "api",
                        "v2",
                        "tasks",
                        "TASK_ID_HERE"
                    ]
                }
            }
        }
    ]
